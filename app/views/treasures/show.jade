extends ../shared/template
block content
  .row
    .col-xs-6
      #map
    .col-xs-6
      .row
        .col-xs-12
          #treasure(data-name='#{treasure.name}', data-lat='#{treasure.lat}', data-lng='#{treasure.lng}')
            .page-header: h1= treasure.name
      .row
        .col-xs-12
          h1 Hint
          h4= treasure.hints

      .row
        .col-xs-12
          img.img-thumbnail#photo(src='treasure.photo')

    form(method='post', action='/treasures/#{treasure._id}/found')
      button.btn.btn-success#found(type="submit") Found It!

block scripts
  script(src='/js/user/show.js')
